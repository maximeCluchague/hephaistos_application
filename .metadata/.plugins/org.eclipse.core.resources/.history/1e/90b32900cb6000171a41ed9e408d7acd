<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
		<title>Hephaistos Application</title>
	</head>
	<body>
		 <center>Hephaistos's Sensors Viewer</center> </br>
	 	 Adresse </br> <input id="adresse" type="text" size="20" /></br>
		 Port </br> <input id="port" type="text" size="20" /></br>
		 
		  <center><input type="button" value="Connexion" onclick="connexion()" /> 
		  <input type="button" value="Deconnexion" onclick="deconnexion()" /></center></br>
		
		<textarea id="messages" readonly="readonly" rows="17" cols="130"></textarea></br></br>
		 Identifiant capteur </br> <input id="idCapteur" type="text" size="20" /></br>
		 Acquisition </br><input id="acquisition" type="text" size="20" /></br>
		 Commande </br><input id="commande" type="text" size="20" /></br>
		
		<center><input type="button" value="Envoyer" onclick="send()" /></center></br>
		
		 <center><iframe src="http://localhost:8080/hephaistos_project/dynamic_chart_2.html" width="900" height="350"></iframe> </center> 
		
		<script type="text/javascript">
			adresse.value = "138.96.192.120";
			port.value = "8080";
			commande.value = "NULL";
			document.getElementById("messages").value += "\nEN ATTENTE D'UNE CONNEXION ...";
			
			
			//var url = "ws://"+adresse.value.toString()+":"+port.value.toString()+"/hephaistos_project/hephaistoswebserver";
			//var webSocket = new WebSocket(url);
			var webSocket;
			//document.getElementById("messages").value += "[WEBSERVEUR GLASSFISH EN ECOUTE] "+url+"\n\n";
			var isConnect = false;
			
			function connexion(){
				try{
					isConnect = true;
					webSocket.close();
					
				}catch(exception){
					
				}
				try{
					url = "ws://"+adresse.value.toString()+":"+port.value.toString()+"/hephaistos_project/hephaistoswebserver";
					
					webSocket = new WebSocket(url);
					
					webSocket.onmessage = function processMessage(sensorMessage) {
						var json = JSON.parse(sensorMessage.data);
						document.getElementById("messages").value += "<MESSAGE> {\"idCapteur\":\""+ json.idCapteur+"\",\"acquisition\":\""+ json.acquisition+",\"\"date\":\"" +json.date+"\",\"commande\":\""+json.commande+"\"}\n";
					}
					
					document.getElementById("messages").value = "\n[CONNEXION] \'"+url+"\'\n\n";
				}catch(exception){
					document.getElementById("messages").value += "[ERREUR SAISIE]\n\n";
				}
			}
				
			function deconnexion(){
				isConnect = false;
				try{
					webSocket.close();
					document.getElementById("messages").value = "\n[DECONNEXION]\n\nEN ATTENTE D'UNE CONNEXION ...";
				}catch(exception){
					document.getElementById("messages").value += "\n\nVous n'êtes pas connecté";
				}
				
			}
			
			
			function send(){
				//var idCapteur = document.getElementById("idCapteur");
				// On créer le Json qui va etre envoyé
				if(isConnect){
					var date=new Date();
					var messageJson = {"idCapteur": idCapteur.value,"acquisition": acquisition.value,"date": date,"commande":commande.value};
					
					webSocket.send(JSON.stringify(messageJson));
					// On remet les textField de la page html vide
					idCapteur.value = "";
					acquisition.value = "";
					commande.value = "NULL";

				}else{
					document.getElementById("messages").value += "\n\nVous devez être connecté pour envoyer un message vers le serveur ... ";
				}
			}
			
			window.onbeforeunload = function(){
				websocket.onclose = function(){};
				websocket.close();
				
			};
		
		</script>
	</body>
	</html>