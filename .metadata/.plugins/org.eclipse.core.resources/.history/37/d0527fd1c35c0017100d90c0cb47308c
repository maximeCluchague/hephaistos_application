package com.za.websocket;

import java.io.IOException;
import java.net.URISyntaxException;

public class testClientJava {
	public static void main(String[] args) throws URISyntaxException, IOException{
		ClientJava clientJava = new ClientJava();
		
		clientJava.accrocherCapteur("capteur_IR");
		clientJava.accrocherCapteur("capteur_UV");
		clientJava.accrocherCapteur("capteur_distance");
		clientJava.accrocherCapteur("capteur_giroscope");
		clientJava.accrocherCapteur("capteur_gps");
		clientJava.accrocherCapteur("capteur_wifi");
		int x1 = 12;
		int x2 = 2;
		int x3 = 17;
		int x4 = 6;
		int x5 = 20;
		int x6 = 9;
		while(true){
			clientJava.envoieMessage("capteur_IR", Integer.toString((int) (x1+Math.random()*(-4)+2)));
			clientJava.envoieMessage("capteur_UV",  Integer.toString((int) (x2+Math.random()*(-4)+2)));
			clientJava.envoieMessage("capteur_distance",  Integer.toString((int) (x3+Math.random()*(-4)+2)));
			clientJava.envoieMessage("capteur_giroscope",  Integer.toString((int) (x4+Math.random()*(-4)+2)));
			clientJava.envoieMessage("capteur_gps",  Integer.toString((int) (x5+Math.random()*(-4)+2)));
			clientJava.envoieMessage("capteur_wifi",  Integer.toString((int) (x6+Math.random()*(-4)+2)));
			clientJava.fermerClient();
		}
	}
}
