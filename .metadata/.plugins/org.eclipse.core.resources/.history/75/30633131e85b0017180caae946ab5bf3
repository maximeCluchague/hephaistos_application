package com.za.websocket;

import java.net.URISyntaxException;
import java.util.ArrayList;

public class ClientJava{
	SensorClientEndpoint client;
	ArrayList<String> capteurs;
	
	public ClientJava() throws URISyntaxException{
		this.client = new SensorClientEndpoint();
		this.capteurs = new ArrayList<String>();
	}
	
	public boolean accrocherCapteur(String capteur){
		return capteurs.add(capteur);
	}
	
	public boolean deccrocherCapteur(String capteur){
		return capteurs.remove(capteur);
	}
	
	public boolean envoieMessage(String idCapteur,String message){
		client.sendMessage(buildJsonData(args[0]));
		// On transmet la valeur de l'aquisition 
		client.sendMessage(buildJsonData(args[1]));
	}
}
