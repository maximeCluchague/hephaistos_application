<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
		<title>Hephaistos Application</title>
	</head>
	<body>
		<textarea id="messages" readonly="readonly" rows="10" cols="73"></textarea></br>
		 Identifiant capteur  <input id="idCapteur" type="text" size="42" /></br>
		 Acquisition          <input id="acquisition" type="text" size="50" /></br>
		
		<input type="button" value="Send" onclick="send()" />
		<script type="text/javascript">
			var webSocket = new WebSocket("ws://138.96.192.120:8080/hephaistos_project/hephaistoswebserver");
			
			document.getElementById("messages").value += "[SERVEUR EN ECOUTE]\n\n"
			
			webSocket.onmessage = function processMessage(sensorMessage) {
				var json = JSON.parse(sensorMessage.data);
				document.getElementById("messages").value += "[ "+json.idCapteur + " | "+json.date+ " ] "+json.acquisition+ "\n\n";
			}
			function send(){
				//var idCapteur = document.getElementById("idCapteur");
				// On créer le Json qui va etre envoyé
				var date=new Date();
				var messageJson = {"idCapteur": idCapteur.value,"acquisition": acquisition.value,"date": date};
				webSocket.send(JSON.stringify(messageJson));
				// On remet les textField de la page html vide
				idCapteur.value = "";
				acquisition.value = "";
				//date.value = "";
			}
			
			window.onbeforeunload = function(){
				websocket.onclose = function(){};
				websocket.close();
				
			};
		
		</script>
	</body>
	</html>